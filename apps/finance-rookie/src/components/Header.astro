---
import type { SiteConfig } from "../site.config";

const { siteConfig } = Astro.props;
const navItems = siteConfig?.nav ?? [];
---
<header class="sticky top-0 z-40 border-b border-black/10 bg-white/90 backdrop-blur">
  <div class="container">
    <div class="flex items-center justify-between py-5">
      <a href="/" class="flex items-baseline gap-1 font-heading text-2xl md:text-3xl">
        <span>{siteConfig.logoParts.primary}</span>
        <span class="text-accent">{siteConfig.logoParts.accent}</span>
      </a>
      <nav class="hidden flex-1 items-center justify-center gap-8 text-[0.65rem] font-semibold uppercase tracking-[0.38em] md:flex">
        {navItems.map((item) => (
          <a href={item.href} class="transition-colors hover:text-accent">
            {item.label}
          </a>
        ))}
      </nav>
      <div class="flex items-center gap-2">
        <button class="icon-button" aria-label="Cerca">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6">
            <circle cx="11" cy="11" r="7" />
            <path d="M20 20l-3.5-3.5" />
          </svg>
        </button>
        <button class="icon-button" aria-label="Salva">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6">
            <path d="M6 4h12a1 1 0 0 1 1 1v16l-7-4-7 4V5a1 1 0 0 1 1-1z" />
          </svg>
        </button>
      </div>
    </div>
    <nav class="flex items-center justify-center gap-6 border-t border-black/5 py-3 text-[0.6rem] font-semibold uppercase tracking-[0.32em] md:hidden">
      {navItems.map((item) => (
        <a href={item.href} class="transition-colors hover:text-accent">
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>
