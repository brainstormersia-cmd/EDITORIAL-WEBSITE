---
import { renderKw } from "../lib/kw";

const { items = [] } = Astro.props;
const trimmed = items.filter(Boolean).slice(0, 4);
---
{trimmed.length ? (
  <div class="mt-4 rounded-none border border-border/60 bg-white/70 p-4">
    <p class="text-[0.65rem] font-semibold uppercase tracking-[0.32em] text-muted">
      In 30 secondi
    </p>
    <ul class="mt-3 space-y-2 text-sm text-fg/80">
      {trimmed.map((item) => (
        <li class="flex gap-2" key={item}>
          <span aria-hidden="true">â€¢</span>
          <span>
            {renderKw(item).map((node) =>
              node.type === "mark" ? <mark class="kw-mark">{node.value}</mark> : node.value
            )}
          </span>
        </li>
      ))}
    </ul>
  </div>
) : null}
