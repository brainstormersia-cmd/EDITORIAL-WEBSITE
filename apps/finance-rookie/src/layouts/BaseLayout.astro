---
import "@theme/styles/global.css";
import { SITE_CONFIG } from "../site.config";
import MetaHead from "@theme/components/MetaHead.astro";
import Footer from "@theme/components/Footer.astro";
import MarketTicker from "../components/MarketTicker.astro";
import Header from "../components/Header.astro";
import BreakingBar from "../components/BreakingBar.astro";

const {
  title,
  description,
  image,
  canonical,
  type,
  breakingText = "Nessuna breaking news al momento",
  breakingHref
} = Astro.props;

// Debug grid visibile SOLO se metti ?grid=1 in URL
const showGrid = Astro.url.searchParams.get("grid") === "1";
---
<!doctype html>
<html lang={SITE_CONFIG.locale}>
  <head>
    <MetaHead
      title={title}
      description={description}
      image={image}
      canonical={canonical}
      type={type}
      siteConfig={SITE_CONFIG}
    />
    <slot name="head" />
  </head>
  <body class="bg-bg text-fg" data-debug-grid={showGrid ? "1" : undefined}>
    <MarketTicker />
    <Header siteConfig={SITE_CONFIG} />
    <BreakingBar text={breakingText} href={breakingHref} />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer siteConfig={SITE_CONFIG} />
  </body>
</html>
