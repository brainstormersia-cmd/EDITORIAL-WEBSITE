---
const { siteConfig } = Astro.props;
const year = new Date().getFullYear();
---
<footer class="footer-dark mt-16">
  <div class="container py-12 grid gap-8 md:grid-cols-2">
    <div>
      <h2 class="text-2xl font-heading text-white">{siteConfig.name}</h2>
      <p class="mt-3 text-sm text-white/70 max-w-md">
        {siteConfig.description}
      </p>
      {siteConfig.socials && (
        <div class="mt-5 flex items-center gap-4 text-xs uppercase tracking-[0.35em] text-white/70">
          {siteConfig.socials.map((social) => (
            <a href={social.href} class="hover:text-accent" target="_blank" rel="noopener noreferrer">
              {social.label}
            </a>
          ))}
        </div>
      )}
    </div>
    <div class="flex flex-col gap-4 text-xs uppercase tracking-[0.35em] text-white/70">
      <a href="/blog" class="hover:text-accent">Archivio</a>
      <a href="/category/analisi" class="hover:text-accent">Analisi</a>
      <a href="/rss.xml" class="hover:text-accent">RSS</a>
    </div>
  </div>
  <div class="border-t border-white/10">
    <div class="container py-4 text-xs text-white/50 flex items-center justify-between">
      <span>Â© {year} {siteConfig.name}. Tutti i diritti riservati.</span>
      <span>Cloudflare Pages ready</span>
    </div>
  </div>
</footer>
