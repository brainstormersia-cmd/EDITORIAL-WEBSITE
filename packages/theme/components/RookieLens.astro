---
import { renderKw } from "../../../apps/finance-rookie/src/lib/kw";

const { text } = Astro.props;
---
{text && (
  <div class="rookie-lens">
    <p class="text-xs uppercase tracking-[0.35em] text-muted">LENTE ROOKIE</p>
    <p class="text-sm">
      {renderKw(text).map((node) =>
        node.type === "mark" ? <mark class="kw-mark">{node.value}</mark> : node.value
      )}
    </p>
  </div>
)}
