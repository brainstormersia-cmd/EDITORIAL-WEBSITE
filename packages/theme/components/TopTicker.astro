---
const items = [
  { label: "FTSE MIB", value: "32.450", change: "+0.6%" },
  { label: "DAX", value: "18.120", change: "+0.4%" },
  { label: "EUR/USD", value: "1.084", change: "-0.1%" },
  { label: "BTC", value: "64.320", change: "+1.3%" },
  { label: "BTP 10Y", value: "3.78%", change: "+0.02" },
  { label: "Brent", value: "82.15", change: "-0.4%" }
];

const now = new Date();
const prettyDate = new Intl.DateTimeFormat("it-IT", {
  weekday: "long",
  day: "2-digit",
  month: "long",
  year: "numeric"
}).format(now);
---

<div class="topline">
  <div class="container topline-inner">
    <div class="topline-left">
      <span class="topline-label">Market snapshot</span>

      <div class="topline-items" aria-label="Market snapshot">
        {items.map((item) => {
          const isNeg = item.change.trim().startsWith("-");
          return (
            <div class="ticker-item" key={item.label}>
              <span class="ticker-label">{item.label}</span>
              <span class="ticker-value">{item.value}</span>
              <span class={`ticker-change ${isNeg ? "is-neg" : "is-pos"}`}>
                {item.change}
              </span>
            </div>
          );
        })}
      </div>
    </div>

    <time class="topline-date" datetime={now.toISOString()}>
      {prettyDate}
    </time>
  </div>
</div>
