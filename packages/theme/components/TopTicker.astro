---
const items = [
  { label: "FTSE MIB", value: "32.450", change: "+0.6%" },
  { label: "DAX", value: "18.120", change: "+0.4%" },
  { label: "EUR/USD", value: "1.084", change: "-0.1%" },
  { label: "BTC", value: "64.320", change: "+1.3%" },
  { label: "BTP 10Y", value: "3.78%", change: "+0.02" },
  { label: "Brent", value: "82.15", change: "-0.4%" }
];
---
<div class="topline border-b border-border">
  <div class="container flex items-center gap-4 overflow-x-auto py-1 text-[0.65rem] uppercase tracking-[0.25em]">
    <span class="text-[0.65rem] font-semibold text-bg">Market snapshot</span>
    <div class="flex items-center gap-6 whitespace-nowrap">
      {items.map((item) => (
        <div class="flex items-center gap-2" key={item.label}>
          <span class="text-bg">{item.label}</span>
          <span class="font-semibold text-bg">{item.value}</span>
          <span class={item.change.startsWith("-") ? "text-red-400" : "text-green-400"}>
            {item.change}
          </span>
        </div>
      ))}
    </div>
  </div>
</div>
