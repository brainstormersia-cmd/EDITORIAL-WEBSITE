---
const { items, getCategoryLabel } = Astro.props;
const resolveCategory = getCategoryLabel ?? ((slug) => slug);
---
<div class="grid gap-6 md:grid-cols-3">
  {items.map((item, index) => (
    <a
      href={`/article/${item.slug}`}
      class="group border-b border-border pb-6 md:border-b-0 md:border-r md:pr-6 md:last:border-r-0 md:last:pr-0"
      key={item.slug}
    >
      <div class="trending-number">{String(index + 1).padStart(2, "0")}</div>
      <p class="mt-5 text-xs uppercase tracking-[0.35em] text-muted">
        {resolveCategory(item.data.category)}
      </p>
      <h3 class="mt-2 font-heading text-lg font-bold group-hover:underline">{item.data.title}</h3>
    </a>
  ))}
</div>
